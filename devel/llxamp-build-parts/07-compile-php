#!/bin/bash
set -e
source $1

BUILDDIR=${BUILDDIR:=/LLXXAMP}
TAG=${TAG:=$BUILDDIR/123456789123456789123456789123456789123456789}
PREFIX=$TAG/php
PROCS=$(nproc)

echo Compiling PHP

cd $DECOMPRESSED_DIR/php
./configure --prefix=$PREFIX --with-apxs2=$TAG/httpd/bin/apxs --with-mysqli --with-mysql-sock=$TAG/mysql/var/mysql/mysql.sock --enable-mbstring --with-bz2 --enable-filter --enable-bcmath --enable-fpm --with-curl --enable-filter --enable-gd --with-freetype --with-jpeg --enable-intl --with-openssl --enable-simplexml --enable-xmlreader --enable-xmlwriter --enable-pcntl --enable-shmop --with-xsl --enable-opcache --enable-calendar --enable-sockets --with-readline --with-zip --with-mhash --with-gettext --with-zlib > /dev/null 2>&1
make clean > /dev/null 2>&1
make -j$PROCS > /dev/null 2>&1
make install > /dev/null 2>&1
make clean > /dev/null 2>&1

